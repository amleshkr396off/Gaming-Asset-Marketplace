{
  "name": "gaming-asset-marketplace",
  "version": "1.0.0",
  "description": "A decentralized marketplace for trading gaming assets as NFTs with fixed-price listings and auction functionality",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "test:verbose": "npx hardhat test --verbose",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "deploy": "npx hardhat run scripts/deploy.js --network coreTestnet",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "node": "npx hardhat node",
    "console": "npx hardhat console --network coreTestnet",
    "size": "npx hardhat size-contracts",
    "coverage": "npx hardhat coverage"
  },
  "keywords": ["nft", "marketplace", "gaming", "blockchain", "solidity", "defi"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.14.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.3"
  }

